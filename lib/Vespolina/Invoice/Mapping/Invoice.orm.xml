<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                    http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Vespolina\Entity\Invoice\Invoice" table="vespolina_invoice">
        <id name="id" type="integer" column="id">
            <generator strategy="AUTO" />
        </id>

        <field name="dueDate" type="datetime" />
        <field name="issuedDate" type="datetime" />
        <field name="payment" type="float" />
        <field name="periodEnd" type="datetime" />
        <field name="periodStart" type="datetime" />

        <one-to-one field="partner" target-entity="Vespolina\Entity\Partner\PartnerInterface">
            <join-column name="partner_id" referenced-column-name="id" />
        </one-to-one>
        <many-to-many field="orders" target-entity="Vespolina\Entity\Order\OrderInterface">
            <join-table name="invoice_orders">
                <join-columns>
                    <join-column name="invoice_id" referenced-column-name="id" />
                </join-columns>
                <inverse-join-columns>
                    <join-column name="order_id" referenced-column-name="id" unique="true" />
                </inverse-join-columns>
            </join-table>
        </many-to-many>
        <one-to-one field="previousInvoice" target-entity="Vespolina\Entity\Invoice\Invoice">
            <join-column name="previous_invoice_id" referenced-column-name="id" nullable="true" />
        </one-to-one>
    </entity>
</doctrine-mapping>
