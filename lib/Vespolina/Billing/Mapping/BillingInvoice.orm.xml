<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                    http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Vespolina\Entity\Billing\BillingInvoice" table="vespolina_billing_invoice">
        <id name="id" type="integer" column="id">
            <generator strategy="AUTO" />
        </id>

        <field name="dueDate" type="datetime" />
        <field name="createdAt" type="datetime" />
        <field name="amountDue" type="float" />
        <field name="status" type="string" />

        <one-to-one field="order" target-entity="Vespolina\Entity\Order\Order">
            <join-column name="order_id" referenced-column-name="id" />
        </one-to-one>

        <one-to-one field="invoice" target-entity="Vespolina\Entity\Invoice\Invoice">
            <join-column name="invoice_id" referenced-column-name="id" />
        </one-to-one>

        <lifecycle-callbacks>
            <lifecycle-callback type="prePersist" method="autoSetCreatedAt" />
        </lifecycle-callbacks>
    </entity>
</doctrine-mapping>
